<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monitoring_Template</title>
    <base href="~/" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Toggle Button -->
    <button class="toggle-btn" id="toggleBtn" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="close-btn" onclick="toggleSidebar()">
            <i class="fas fa-arrow-left"></i>
        </button>

        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <h2>SideMenu<span style="color: red;">.</span></h2>
        </div>

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li><a asp-action="index" asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
            <li><a href="#"><i class="fas fa-cog"></i> What we do</a></li>
            <li><a asp-action="privacy" asp-controller="Home"><i class="fas fa-user"></i> About us</a></li>
            <li><a href="#"><i class="fas fa-briefcase"></i> Portfolio</a></li>
            <li><a href="#"><i class="fas fa-envelope"></i> Contact us</a></li>

            <!-- Dropdown Menu -->
            <li class="dropdown">
                <a href="#" onclick="toggleDropdown()">
                    <i class="fas fa-sync-alt"></i> Other sections <i class="fas fa-chevron-down"></i>
                </a>
                <ul class="dropdown-menu" id="dropdownMenu">
                    <li><a href="#">Section 1</a></li>
                    <li><a href="#">Section 2</a></li>
                </ul>
            </li>
        </ul>

        <!-- Sidebar Footer -->
        <div class="sidebar-footer">
            <button class="top-btn">⬆ Top</button>
            <div class="theme-toggle">
                <span class="dark-mode"></span>
                <span class="light-mode"></span>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="content" id="content">
        <div class="container-fluid">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
                function toggleSidebar() {
            let sidebar = document.getElementById("sidebar");
            let content = document.getElementById("content");
            let toggleBtn = document.getElementById("toggleBtn");

            if (sidebar.classList.contains("sidebar-hidden")) {
                sidebar.classList.remove("sidebar-hidden");
                content.classList.remove("content-full");
                toggleBtn.classList.add("hidden");
            } else {
                sidebar.classList.add("sidebar-hidden");
                content.classList.add("content-full");
                toggleBtn.classList.remove("hidden");
            }
        }

        function toggleDropdown() {
            let dropdown = document.getElementById("dropdownMenu");
            dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
        }

    </script>
</body>
</html>
